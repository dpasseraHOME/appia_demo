<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929" >
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/details_search_button"
        android:ems="10"
        android:hint="@string/home_search_hint" />

    <Button
        android:id="@+id/details_search_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        
        android:layout_alignParentRight="true"
        android:text="@string/home_search_button"
        android:layout_marginTop="5dp" />    
    <GridView
        android:id="@+id/home_app_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results_header"
        android:numColumns="2"
        android:layout_marginTop="6dp" >

     </GridView>

    <TextView
        android:id="@+id/results_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:background="@drawable/title_bar"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:text="Results"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>